  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "address": "localhost",
      "port": 5858,
      "restart": true,
      "sourceMaps": false,
      "localRoot": "${workspaceRoot}/src/server",
      "remoteRoot": "/usr/src/app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/src/server/index.js"
    }
  ]
}
